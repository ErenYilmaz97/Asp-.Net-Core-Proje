@model EmployeeAddModel

<div class="album py-1 bg-light">
    <div class="container">

        <div class="h-100 d-flex justify-content-center align-items-center vertical-center mt-5 mb-5">
            <div class="card" style="width: 40%;  border-radius: 20px;">
                <div class="card-header text-center" bg-secondary">
                    <h5 class="mt-1">Employee Update</h5>
                </div>
                <div class="card-body">

                    <form method="post" asp-controller="Employee" asp-action="Update">
                        <div class="form-group">
                            <label class=>Name</label>
                            <input type="text" class="form-control" asp-for="Name" value="@Model.Name">
                            <span asp asp-validation-for="Name"></span>
                        </div>

                        <div class="form-group">
                            <label>Lastname</label>
                            <input type="text" class="form-control" asp-for="Lastname" value="@Model.Lastname">
                            <span asp asp-validation-for="Lastname"></span>
                        </div>

                        <div class="form-group">
                            <label>City</label>
                            <input type="text" class="form-control" asp-for="City" value="@Model.City">
                            <span asp asp-validation-for="City"></span>
                        </div>
                        <div class="form-group">
                            <label>Country</label>
                            <input type="text" class="form-control" asp-for="Country" value="@Model.Country">
                            <span asp asp-validation-for="Country"></span>
                        </div>
                        <div class="form-group">
                            <label>Address</label>
                            <input type="text" class="form-control" asp-for="Adress" value="@Model.Adress">
                            <span asp asp-validation-for="Adress"></span>
                        </div>
                        <div class="form-group">
                            <label>Phone</label>
                            <input type="number" class="form-control" asp-for="Phone" value="@Model.Phone">
                            <span asp asp-validation-for="Phone"></span>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-success mt-2">Update</button>
                            <button type="reset" class="btn btn-info mt-2 ml-1">Clear</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>




