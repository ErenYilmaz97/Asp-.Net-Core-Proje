@model EmployeeListModel


<section class="jumbotron text-center">
    <div class="container">
        <h1>Personel Sayfası</h1>
        <p>Personelleri Görüntüleyebilir, Ekleme Silme ve Güncelleme İşlemlerinizi Gerçekleştirebilirsiniz.</p>
        <a style="border-radius: 5px" href="~/Employee/Add" class="btn btn-primary my-2">Employee Add</a>
    </div>
</section>

<div class="album py-1 bg-light">
    <div class="container-fluid">
        <table class="table table-hover table-striped table-sm">
            <thead class="thead-dark">
                <tr>
                    <th scope="row" style="text-align: center">ID</th>
                    <th scope="row" style="text-align: center">Name</th>
                    <th scope="row" style="text-align: center">Lastname</th>
                    <th scope="row" style="text-align: center">City</th>
                    <th scope="row" style="text-align: center">Country</th>
                    <th scope="row" style="text-align: center">Adress</th>
                    <th scope="row" style="text-align: center">Phone</th>
                    <th scope="row" style="text-align: center">Options</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model.EmployeeLists)
                {

                <tr>

                    <td style="text-align: center; ">@employee.EmployeeID</td>
                    <td style="text-align: center;">@employee.Name</td>
                    <td style="text-align: center; ">@employee.LastName</td>
                    <td style="text-align: center; ">@employee.City</td>
                    <td style="text-align: center; ">@employee.Country</td>
                    <td style="text-align: center; ">@employee.Adress</td>
                    <td style="text-align: center; ">@employee.Phone</td>
                    <td style="text-align: center;">
                        <a style="border-radius: 5px;" href="~/Employee/Delete/@employee.EmployeeID" class="btn btn-sm btn-danger py-0">Delete</a>
                        <a style="border-radius: 5px;" href="~/Employee/Update/@employee.EmployeeID" class="btn btn-sm btn-primary py-0 mr-1">Update</a>
                    </td>
                </tr>

                }
            </tbody>
        </table>
    </div>
</div>



